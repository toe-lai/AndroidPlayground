<resources>

    <!-- Exists for inheritance purposes -->
    <style name="AndroidPlayground" parent="AndroidPlayground.Base" />

    <style name="AndroidPlayground.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>
    </style>

    <style name="AndroidPlayground.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AndroidPlayground.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Activity styles -->
    <style name="AndroidPlayground.Template" />

    <!-- Button styles -->
    <style name="Widget.AndroidPlayground.Button.Base" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/app_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Button</item>
    </style>

</resources>
